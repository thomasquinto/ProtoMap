<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_blueberry_500</item>
        <item name="colorPrimaryDark">@color/primary_main_grape_500</item>
        <item name="colorAccent">@color/main_watermelon_500</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:navigationBarColor">@color/primary_main_grape_500</item>
        <item name="android:statusBarColor">@color/primary_main_grape_500</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- From Coordinator Examples -->
    <style name="ToolBarWithNavigationBack">
        <!--
        <item name="navigationIcon">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
        -->
    </style>

    <style name="BottomNavigationTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/main_blueberry_500</item>
    </style>

    <style name="BottomBarTheme" parent="AppTheme">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>


</resources>
